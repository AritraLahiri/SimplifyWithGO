@model IEnumerable<Product>


<div class="row pb-3">
	@foreach (Product product in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card h-100 d-flex flex-column shadow border-top border-1 rounded">
						<img src="@product.ImageUrl" class="card-img-top" style="width:100%; height:250px; object-fit:cover;" />
						<div class="card-body d-flex flex-column flex-grow-1">
							<p class="card-title fw-bold h2 text-dark-emphasis mt-2 text-uppercase text-center">
								@product.Name
							</p>
							<p class="card-footer h9 text-light-emphasis opacity-75 mt-2 text-uppercase text-center flex-grow-1"
							   style="min-height: 50px;text-align:center ">
								 @Html.Raw(product.Description)
							</p>
							<p class="card-title h6 text-dark opacity-75 mt-2 text-center">
								As low as <span class="h4 text-success fw-bold">@product.PriceFor100.ToString("c")</span>
							</p>
							<p class="card-title h6 text-dark opacity-75 mt-2 text-uppercase text-center">
								Price: <span class="h4 text-success fw-bold">@product.ListPrice.ToString("c")</span>
							</p>
							<div class="mt-auto">
								<a  asp-action="Details" asp-route-prodId="@product.Id"  class="btn btn-secondary bg-gradient border-0 form-control">Details</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>



	}


</div>