@model List<Category> 
	<div class="container">
		<div class="my-5">
			<h1>Category</h1>
		</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th scope="col">
					Name
				</th>
				<th scope="col">
					Display Order
				</th>
			</tr>
		</thead>
		<tbody class="container">
			@foreach (var item in Model.OrderBy(u => u.DisplayOrder))
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.DisplayOrder</td>
					<td>
						<div class="container">
							<a asp-route-Id="@item.Id"  class="btn  mx-2 btn-warning" asp-controller="Category" asp-action="Edit">Edit</a>
							<a asp-route-Id="@item.Id" class="btn mx-2 btn-danger" asp-controller="Category" asp-action="Delete">Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<a asp-controller="Category" asp-action="Create" class="btn btn-dark my-5" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-original-title="Lets create some Category" aria-describedby="tooltip787480"> Create Category</a>

	</div>



