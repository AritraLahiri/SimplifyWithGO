@using SimplifyWithGO.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model Category

<div class="container">
	<div class="my-5">
		<h1>Edit Category</h1>
		<br />
	</div>
	<form method="post">
		<input asp-for="Id" hidden />
		<div class="container">
			<div asp-validation-summary="All"></div>
		</div>
		<div class="form-group">
			<label class="p-0 my-2" asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label class="p-0 my-2" asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row my-5 ">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-dark form-control">Edit Now</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-light form-control">Back to listing</a>
			</div>
		</div>
	</form>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}


