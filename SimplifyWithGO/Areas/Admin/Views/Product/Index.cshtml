@model List<Product>
<div class="container">
	<div class="my-5">
		<h1>Products</h1>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th scope="col">
					
				</th>
				<th scope="col">
					Name
				</th>
				<th scope="col">
					Description
				</th>	
				<th scope="col">
					Price
				</th>	
				<th scope="col">
					Category
				</th>
			</tr>
		</thead>
		<tbody class="container">
			@foreach (var item in Model.OrderBy(u => u.Price))
			{
				<tr>
					@* <td>@item.ImageUrl</td> *@
					<td><img src="@item.ImageUrl" class="img-thumbnail w-auto h-25 " style="border-radius:15px;height:20px" /></td>
					<td class="w-auto">@item.Name</td>
					<td class="w-auto">@item.Description</td>
					<td class="w-auto">@item.Price</td>
					<td class="w-auto">@item.Category</td>
					<td class="w-auto">
						<div class="d-flex">
							<a asp-route-Id="@item.Id" class="btn  mx-2 btn-warning" asp-controller="Product" asp-action="Upsert">Edit</a>
							<a asp-route-Id="@item.Id" class="btn mx-2 btn-danger" asp-controller="Product" asp-action="Delete">Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
	<a asp-controller="Product" asp-action="Upsert" class="btn btn-dark my-5" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-original-title="Lets create some Category" aria-describedby="tooltip787480"> Create Product</a>

</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial"></partial>
}



